<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.olympicweightlifting">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <activity android:name=".authentication.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".features.calculators.CalculatorsActivity" />
        <activity android:name=".mainpage.MainActivity" />
        <activity android:name=".authentication.profile.ProfileActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".mainpage.MainActivity" />
        </activity>
        <activity android:name=".features.lifts.LiftsActivity" />
        <activity android:name=".features.records.RecordsActivity" />
        <activity android:name=".features.tracking.TrackingActivity" />
        <activity android:name=".features.programs.ProgramsActivity" />
    </application>

</manifest>