<resources>
    <attr name="colorCardBackground" format="reference" />
    <attr name="controls" format="reference" />
    <attr name="toolbar" format="reference" />
    <attr name="styleText" format="reference" />
    <attr name="colorText" format="reference" />
    <attr name="colorBackground" format="reference" />
    <attr name="colorDialog" format="reference" />
    <attr name="colorSecondary" format="reference" />

    <style name="AppTheme" parent="LightAppTheme">
        <item name="android:statusBarColor">@color/colorBackgroundLight</item>
    </style>

    <style name="AppTheme.Dark" parent="DarkAppTheme" />

    <style name="LightAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorHint">@color/colorHintText</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Colored.Custom</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>

        <item name="android:windowBackground">@color/colorBackgroundLighter</item>
        <item name="android:colorBackground">@color/colorBackgroundLighter</item>
        <item name="android:textColor">@color/colorBackgroundDarker</item>

        <item name="colorBackground">@color/colorBackgroundLighter</item>
        <item name="styleText">@style/TextLight</item>
        <item name="colorText">@color/colorBackgroundDarker</item>
        <item name="colorDialog">@color/colorBackgroundLighter</item>
        <item name="colorCardBackground">@color/colorWhite</item>
        <item name="colorSecondary">@color/colorSecondaryDark</item>

        <item name="toolbar">@style/ToolbarLight</item>
        <item name="controls">@style/ControlsLight</item>
    </style>

    <style name="DarkAppTheme" parent="LightAppTheme">
        <item name="android:windowBackground">@color/colorBackgroundDarker</item>
        <item name="android:statusBarColor">@color/colorBackgroundDarker</item>
        <item name="android:colorBackground">@color/colorBackgroundDarker</item>
        <item name="android:textColor">@color/colorWhite</item>

        <item name="colorBackground">@color/colorBackgroundDarker</item>
        <item name="styleText">@style/TextDark</item>
        <item name="colorText">@color/colorWhite</item>
        <item name="colorDialog">@color/colorBackgroundDark</item>
        <item name="colorCardBackground">@color/colorBackgroundDark</item>
        <item name="colorSecondary">@color/colorSecondaryLight</item>

        <item name="toolbar">@style/ToolbarDark</item>
        <item name="controls">@style/ControlsDark</item>
    </style>

    <style name="Widget.AppCompat.Button.Colored.Custom" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Widget.AppCompat.Button.Borderless.Colored" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/colorPrimary</item>
    </style>

    <style name="TextLight">
        <item name="android:textColor">@color/colorBackgroundDarker</item>
    </style>

    <style name="TextDark">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ToolbarLight">
        <item name="colorControlNormal">@color/colorBackgroundDarker</item>
        <item name="android:textColor">@color/colorBackgroundDarker</item>
    </style>

    <style name="ToolbarDark">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ControlsLight"></style>

    <style name="ControlsDark">
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DarkBackgroundTheme">
        <item name="android:textColor">@color/colorBackgroundLight</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
</resources>
