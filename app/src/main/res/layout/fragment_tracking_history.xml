<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.olympicweightlifting.features.tracking.history.TrackingHistoryFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_workouts"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/text_no_workouts_saved"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/tracking_empty_history"
        android:textSize="22sp" />

</FrameLayout>
