<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/signing_activity_padding"
    tools:context="com.olympicweightlifting.authentication.SignInActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/google_signin_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="@dimen/signin_button_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/signin_activity_button_margin"
            android:backgroundTint="#FFFFFF"
            android:drawableStart="@drawable/ic_google"
            android:text="@string/google_signin_button_text"
            android:textColor="#000000" />

        <Button
            android:id="@+id/facebook_signin_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="@dimen/signin_button_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/signin_activity_button_margin"
            android:backgroundTint="#3C5A96"
            android:drawableStart="@drawable/ic_facebook"
            android:text="@string/facebook_signin_button_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/signin_buttons_separator_line_height"
                android:layout_weight="1"
                android:background="@color/material_grey_800" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/signin_buttons_separator_text_margin_right"
                android:layout_marginStart="@dimen/signin_buttons_separator_text_margin_left"
                android:text="@string/signin_buttons_separator_text" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/signin_buttons_separator_line_height"
                android:layout_weight="1"
                android:background="@color/material_grey_800" />
        </LinearLayout>

        <Button
            android:id="@+id/guest_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="@dimen/signin_button_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/signin_activity_button_margin"
            android:drawableStart="@drawable/ic_user"
            android:text="@string/anonymous_signin_button_text" />
    </LinearLayout>
</LinearLayout>
