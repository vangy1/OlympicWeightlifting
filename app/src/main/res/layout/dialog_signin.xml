<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="Sign in"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_google_signin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/signin_button_height"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/signin_dialog_button_margin_vertical"
        android:layout_marginLeft="@dimen/signin_dialog_button_margin_horizontal"
        android:layout_marginRight="@dimen/signin_dialog_button_margin_horizontal"
        android:layout_marginTop="@dimen/signin_dialog_button_margin_vertical"
        android:backgroundTint="#FFFFFF"
        android:drawableStart="@drawable/ic_google"
        android:text="@string/signin_google_prompt"
        android:textColor="#000000" />


    <Button
        android:id="@+id/button_facebook_signin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/signin_button_height"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/signin_dialog_button_margin_vertical"
        android:layout_marginLeft="@dimen/signin_dialog_button_margin_horizontal"
        android:layout_marginRight="@dimen/signin_dialog_button_margin_horizontal"
        android:layout_marginTop="@dimen/signin_dialog_button_margin_vertical"
        android:backgroundTint="#3C5A96"
        android:drawableStart="@drawable/ic_facebook"
        android:text="@string/signin_facebook_prompt" />
</LinearLayout>