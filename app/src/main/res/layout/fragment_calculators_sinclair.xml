<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.calculators.sinclair.SinclairCalculatorFragment">


    <TextView
        android:id="@+id/total_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="@string/sinclair_calculator_fragment_total_text"
        android:textColor="@color/colorBlackText"
        android:textSize="@dimen/sinclair_calculator_fragment_input_info_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/total_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:gravity="end"
        android:hint="@string/sinclair_calculator_fragment_total_input_hint"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:minEms="6"
        android:textColor="@color/colorBlackText"
        android:textSize="@dimen/sinclair_calculator_fragment_input_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/total_text_view"
        app:layout_constraintEnd_toStartOf="@+id/total_units"
        app:layout_constraintTop_toTopOf="@+id/total_text_view" />

    <TextView
        android:id="@+id/total_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/total_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/total_text_view" />

    <View
        android:id="@+id/separator1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sinclair_calculator_fragment_row_separator_line_height"
        android:layout_marginTop="12dp"
        android:background="@color/separatorColor"
        app:layout_constraintTop_toBottomOf="@id/total_text_view" />


    <TextView
        android:id="@+id/bodyweight_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/sinclair_calculator_fragment_bodyweight_text"
        android:textColor="@color/colorBlackText"
        android:textSize="@dimen/sinclair_calculator_fragment_input_info_text_size"
        app:layout_constraintStart_toStartOf="@+id/total_text_view"
        app:layout_constraintTop_toBottomOf="@+id/separator1" />

    <EditText
        android:id="@+id/edittext_bodyweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="end"
        android:hint="@string/sinclair_calculator_fragment_bodyweight_input_hint"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:minEms="6"
        android:textColor="@color/colorBlackText"
        android:textSize="@dimen/sinclair_calculator_fragment_input_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/bodyweight_text_view"
        app:layout_constraintEnd_toEndOf="@+id/total_edit_text"
        app:layout_constraintTop_toTopOf="@+id/bodyweight_text_view" />

    <TextView
        android:id="@+id/bodyweight_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/bodyweight_text_view"
        app:layout_constraintEnd_toEndOf="@+id/total_units"
        app:layout_constraintStart_toStartOf="@+id/total_units"
        app:layout_constraintTop_toTopOf="@+id/bodyweight_text_view" />

    <View
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sinclair_calculator_fragment_row_separator_line_height"
        android:layout_marginTop="12dp"
        android:background="@color/separatorColor"
        app:layout_constraintTop_toBottomOf="@id/bodyweight_text_view" />

    <TextView
        android:id="@+id/text_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/sinclair_calculator_fragment_gender_text"
        android:textColor="@color/colorBlackText"
        android:textSize="@dimen/sinclair_calculator_fragment_input_info_text_size"
        app:layout_constraintStart_toStartOf="@+id/total_text_view"
        app:layout_constraintTop_toBottomOf="@+id/separator2" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radiogroup_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@id/radiobutton_men"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/text_gender"
        app:layout_constraintEnd_toEndOf="@+id/total_units"
        app:layout_constraintTop_toTopOf="@+id/text_gender">

        <RadioButton
            android:id="@+id/female_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender_women" />

        <RadioButton
            android:id="@+id/radiobutton_men"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender_men" />

    </RadioGroup>

    <View
        android:id="@+id/separator3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sinclair_calculator_fragment_row_separator_line_height"
        android:layout_marginTop="12dp"
        android:background="@color/separatorColor"
        app:layout_constraintTop_toBottomOf="@id/text_gender" />

    <Button
        android:id="@+id/button_calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/sinclair_calculator_fragment_calculate_button_text"
        app:layout_constraintTop_toBottomOf="@id/separator3" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_results"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_calculate" />

</android.support.constraint.ConstraintLayout>
