<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myApplication="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/feature_card_height"
    android:layout_marginBottom="@dimen/feature_card_vertical_margin"
    android:layout_marginLeft="@dimen/feature_card_horizontal_margin"
    android:layout_marginRight="@dimen/feature_card_horizontal_margin"
    android:layout_marginTop="@dimen/feature_card_vertical_margin"
    myApplication:cardCornerRadius="@dimen/feature_card_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/feature_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/main_activity_feature_content_descriptior"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/feature_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="@dimen/feature_name_padding"
                android:text="@string/all_caj"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/feature_name_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/feature_shortcuts_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

