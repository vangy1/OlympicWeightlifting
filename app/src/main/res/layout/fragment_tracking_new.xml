<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".features.calculators.repmax.RepmaxCalculatorFragment">

    <TextView
        android:id="@+id/weight_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Weight"
        android:textColor="@color/colorBlackText"
        android:textSize="@dimen/sinclair_calculator_fragment_input_info_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/weight_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:gravity="end"
        android:hint="@string/sinclair_calculator_fragment_total_input_hint"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:minEms="6"
        android:textColor="@color/colorBlackText"
        android:textSize="@dimen/sinclair_calculator_fragment_input_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/weight_text_view"
        app:layout_constraintEnd_toStartOf="@+id/weight_units"
        app:layout_constraintTop_toTopOf="@+id/weight_text_view" />

    <TextView
        android:id="@+id/weight_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:text="kg"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/weight_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/weight_text_view" />

    <View
        android:id="@+id/separator1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sinclair_calculator_fragment_row_separator_line_height"
        android:layout_marginTop="12dp"
        android:background="@color/separatorColor"
        app:layout_constraintTop_toBottomOf="@id/weight_text_view" />

    <TextView
        android:id="@+id/reps_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Reps"
        android:textColor="@color/colorBlackText"
        android:textSize="@dimen/sinclair_calculator_fragment_input_info_text_size"
        app:layout_constraintStart_toStartOf="@+id/weight_text_view"
        app:layout_constraintTop_toBottomOf="@+id/separator1" />

    <EditText
        android:id="@+id/reps_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="end"
        android:hint="@string/sinclair_calculator_fragment_bodyweight_input_hint"
        android:inputType="number"
        android:maxLength="3"
        android:minEms="6"
        android:textColor="@color/colorBlackText"
        android:textSize="@dimen/sinclair_calculator_fragment_input_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/reps_text_view"
        app:layout_constraintEnd_toEndOf="@+id/weight_units"
        app:layout_constraintTop_toTopOf="@+id/reps_text_view" />

    <View
        android:id="@+id/separator2"
        android:layout_width="0dp"
        android:layout_height="@dimen/sinclair_calculator_fragment_row_separator_line_height"
        android:layout_marginTop="12dp"
        android:background="@color/separatorColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reps_text_view" />

    <TextView
        android:id="@+id/exercise_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Exercise"
        android:textColor="@color/colorBlackText"
        android:textSize="@dimen/sinclair_calculator_fragment_input_info_text_size"
        app:layout_constraintStart_toStartOf="@+id/weight_text_view"
        app:layout_constraintTop_toBottomOf="@+id/separator3" />

    <Spinner
        android:id="@+id/exercise_spinner"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/exercise_text_view"
        app:layout_constraintEnd_toStartOf="@+id/exercise_manager_button"
        app:layout_constraintTop_toTopOf="@+id/exercise_text_view" />

    <ImageButton
        android:id="@+id/exercise_manager_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/modify"
        android:tint="@color/colorGreyText"
        app:layout_constraintBottom_toBottomOf="@+id/exercise_text_view"
        app:layout_constraintEnd_toEndOf="@+id/weight_units"
        app:layout_constraintStart_toStartOf="@+id/weight_units"
        app:layout_constraintTop_toTopOf="@+id/exercise_text_view" />


    <View
        android:id="@+id/separator3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sinclair_calculator_fragment_row_separator_line_height"
        android:layout_marginTop="12dp"
        android:background="@color/separatorColor"
        app:layout_constraintTop_toBottomOf="@+id/date_text_view" />


    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="12dp"
        android:text="Sets"
        android:textColor="@color/colorBlackText"
        android:textSize="@dimen/sinclair_calculator_fragment_input_info_text_size"
        app:layout_constraintStart_toStartOf="@+id/weight_text_view"
        app:layout_constraintTop_toTopOf="@+id/separator2" />

    <EditText
        android:id="@+id/sets_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="end"
        android:hint="@string/sinclair_calculator_fragment_bodyweight_input_hint"
        android:inputType="number"
        android:maxLength="3"
        android:minEms="6"
        android:textColor="@color/colorBlackText"
        android:textSize="@dimen/sinclair_calculator_fragment_input_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/date_text_view"
        app:layout_constraintEnd_toEndOf="@+id/reps_edit_text"
        app:layout_constraintTop_toTopOf="@+id/date_text_view" />

    <View
        android:id="@+id/separator4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sinclair_calculator_fragment_row_separator_line_height"
        android:layout_marginTop="12dp"
        android:background="@color/separatorColor"
        app:layout_constraintTop_toBottomOf="@+id/exercise_text_view" />


    <Button
        android:id="@+id/add_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator4" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="@color/colorBlackText"
        android:textSize="@dimen/sinclair_calculator_fragment_input_info_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/save_button"
        app:layout_constraintStart_toStartOf="@+id/weight_text_view"
        app:layout_constraintTop_toTopOf="@+id/save_button" />

    <Button
        android:id="@+id/date_picker_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="25.1"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <Button
        android:id="@+id/save_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:text="Save workout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/weight_units" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/exercises_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/date_picker_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_button" />


</android.support.constraint.ConstraintLayout>


